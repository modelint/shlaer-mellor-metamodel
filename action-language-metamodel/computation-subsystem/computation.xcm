class Computation Action
attributes
    ID : Action ID {I, R901}
    Activity : Activity Number {I, R901}
    Domain : Domain Name {I, R901}
    Expression : Computation
--
class Computation Input
attributes
    Computation : Action ID {I, R1100}
    Activity : Activity Number {I, R1100}
    Domain : Domain Name {I, R1100}
    Input flow : Flow ID {I, R1100}
--
class Data Flow <import:Flow>
attributes
    ID {I}
    Activity {I}
    Domain {I}
--
class General Computation
attributes
    ID : Action ID {I, R1102}
    Activity : Activity Number {I, I2, R1102, R1101}
    Domain : Domain Name {I, I2, R1102, R1101}
    Result flow : Flow ID {I2, R1101}
--
class Scalar Flow <import:Flow>
attributes
    ID {I}
    Activity {I}
    Domain {I}
--
relationships
    R1100
    inputs operand from, M Data Flow
    provides operand to, Mc Computation Action
    1 Computation Input
    Computation Input.(Input flow, Activity, Domain) -> Data Flow.(ID, Activity, Domain)
    Computation Input.(Computation, Activity, Domain) -> Computation Action.(ID, Activity, Domain)
--
    R1101
    outputs result as, 1 Scalar Flow
    provides result from, 1c General Computation
    General Computation.(Result flow, Activity, Domain) -> Scalar Flow.(ID, Activity, Domain)
--
    R1102
    Computation +
        General Computation
        Boolean Partition
    <subclass>.(ID, Activity, Domain) -> Computation.(ID, Activity, Domain)
--
    R1103
    outputs true value in, 1 Scalar Flow
    provides true value of, 1c Boolean Partition
    Boolean Partition.(True flow, Activity, Domain) -> Scalar Flow.(ID, Activity, Domain)
--
    R1104
    outputs false value in, 1 Scalar Flow
    provides false value of, 1c Boolean Partition
    Boolean Partition.(False flow, Activity, Domain) -> Scalar Flow.(ID, Activity, Domain)
